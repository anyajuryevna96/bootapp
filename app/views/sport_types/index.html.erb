<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="m-0">Activity Types</h1>
    <%= link_to "New Type", new_sport_type_path, class: "btn btn-primary" %>
  </div>

  <% if @sport_types.any? %>
    <ul class="list-group shadow-sm">
      <% @sport_types.each do |sport_type| %>
        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
          <div>
            <h5 class="mb-1"><%= sport_type.name %></h5>
          </div>
          <div class="d-flex gap-2">
            <%= link_to "Edit", edit_sport_type_path(sport_type), class: "btn btn-sm btn-outline-primary" %>
            <%= button_to "Delete", sport_type, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No sport types added yet.</p>
  <% end %>
</div>
