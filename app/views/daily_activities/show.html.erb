<div class="container my-5">
  <div class="bg-white p-4 p-md-5 rounded-4 shadow" style="max-width: 700px; margin: auto;">
    <h3 class="mb-4">Daily Activity Details</h3>

    <div class="row mb-3">
      <div class="col-6 fw-bold">ID:</div>
      <div class="col-6"><%= @daily_activity.id %></div>

      <div class="col-6 fw-bold">Sport Type:</div>
      <div class="col-6"><%= @daily_activity.sport_type.name %></div>

      <div class="col-6 fw-bold">Duration:</div>
      <div class="col-6"><%= @daily_activity.duration %></div>

      <div class="col-6 fw-bold">Set:</div>
      <div class="col-6"><%= @daily_activity.set %></div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4 flex-wrap">
      <%= link_to "Back", daily_activities_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Edit", edit_daily_activity_path(@daily_activity), class: "btn btn-primary" %>
      <%= button_to "Delete", @daily_activity,
            method: :delete,
            data: { turbo_confirm: "Are you sure?" },
            class: "btn btn-danger" %>
    </div>
  </div>
</div>
